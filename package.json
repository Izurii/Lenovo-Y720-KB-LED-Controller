{
	"productName": "Lenovo Y720 Keyboard LED Controller",
	"name": "y720-kb-led-controller",
	"engines": {
		"node": "=16.9.1"
	},
	"engineStrict": true,
	"version": "v1.9.11-corinthians",
	"description": "Software to control the keyboard backlight rgb leds of Lenovo Legion Y720 notebook.",
	"main": "distJs/src/main.js",
	"author": "Izurii Hootoh <izuriihootoh@gmail.com> (https://github.com/Izurii)",
	"scripts": {
		"build": "electron-builder",
		"start": "electron .",
		"build-libs": "cd ./libs/led && yarn && cd ../hotkey && yarn",
		"postbuild-libs": "yarn run copy-hotkey-addon && yarn run copy-led-addon",
		"copy-hotkey-addon": "cp ./libs/hotkey/build/Release/hotkeyAddon.node ./addons/hotkey ",
		"copy-led-addon": "cp ./libs/led/build/Release/ledAddon.node ./addons/led"
	},
	"build": {
		"appId": "y720-kb-led-controller",
		"icon": "resources/icon.png",
		"linux": {
			"target": [
				"deb",
				"AppImage"
			],
			"category": "Utility",
			"icon": "./resources/icons",
			"desktop": {
				"Categories": "Utility"
			},
			"publish": [
				{
					"provider": "github",
					"releaseType": "draft"
				}
			]
		},
		"files": [
			"resources/*",
			"libs/leds/index.js",
			"libs/leds/options.js",
			"libs/leds/build/Release/ledAddon.node",
			"libs/hotkey/index.js",
			"libs/hotkey/build/Release/hotkeyAddon.node",
			"src/**/*"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Izurii/Lenovo-Y720-KB-Led-Controller.git"
	},
	"keywords": [],
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Izurii/Lenovo-Y720-KB-Led-Controller/issues"
	},
	"homepage": "https://github.com/Izurii/Lenovo-Y720-KB-Led-Controller#readme",
	"devDependencies": {
		"@types/angular": "^1.8.4",
		"@types/angular-animate": "^1.5.11",
		"@types/angular-aria": "^1.7.1",
		"@types/angular-material": "^1.1.73",
		"@types/angular-route": "^1.7.2",
		"@types/electron": "^1.6.10",
		"electron": "^16.0.5",
		"electron-builder": "^22.14.5",
		"electron-rebuild": "^3.2.5",
		"electron-reloader": "^1.2.1",
		"tsc": "^2.0.3",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"angular": "^1.8.2",
		"angular-animate": "^1.8.2",
		"angular-aria": "^1.8.2",
		"angular-material": "^1.2.4",
		"angular-messages": "^1.8.2",
		"angular-route": "^1.8.2",
		"easy-auto-launch": "^6.0.0",
		"electron-first-run": "^3.0.0",
		"electron-store": "^8.0.1",
		"sudo-prompt": "^9.2.1"
	}
}
